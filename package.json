{
  "name": "medict",
  "version": "1.0.0",
  "author": "chenquan <terasum@163.com>",
  "description": "medict is a cross platform dictionary application,support *.mdx/*.mdd dictionary format",
  "keywords": [
    "mdict",
    "mdd",
    "mdx",
    "dictionary",
    "electron",
    "cross-platform"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/terasum/medict.git"
  },
  "contributors": [
    {
      "name": "chenquan",
      "email": "terasum@163.com"
    }
  ],
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "postinstall": "npm run lint:fix",
    "release": "standard-version"
  },
  "build": {
    "productName": "medict",
    "appId": "cn.medict.medict-desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "./.githooks/pre-commit"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "revert",
        "chore",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern, you should use one of [feat| fix| revert|chore| docs| style| refactor| perf| test| build| ci]",
      "helpMessage": ""
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "cheerio": "^1.0.0-rc.2",
    "electron-drag": "^1.2.2",
    "electron-store": "^2.0.0",
    "font-awesome": "^4.7.0",
    "fs-extra-promise": "^1.0.1",
    "iview": "^3.1.3",
    "js-mdict": "3.1.0",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-less": "^2.4.0",
    "semantic-ui-vue": "^0.4.1",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-router": "^2.5.3",
    "vue-select": "^2.4.0",
    "vuescroll": "^4.5.27",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "ajv": "^5.5.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.2.0",
    "chai": "^4.0.0",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.7",
    "electron-builder": "^19.19.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.11.2",
    "ghooks": "^2.0.2",
    "html-webpack-plugin": "^2.30.1",
    "inject-loader": "^3.0.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-electron": "^5.3.0",
    "karma-mocha": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.13",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mocha": "^3.0.2",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.2",
    "require-dir": "^0.3.0",
    "sass-loader": "^6.0.7",
    "spectron": "^3.7.1",
    "standard-version": "^4.3.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "validate-commit-msg-smart": "^1.1.2",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^13.0.5",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.0",
    "worker-loader": "^2.0.0"
  }
}
