{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    // 这可以对 `this` 上的数据 property 进行更严格的推断
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators":true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
